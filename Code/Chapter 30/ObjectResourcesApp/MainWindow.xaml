<Window x:Class="ObjectResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fun with Object Resources" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Window.Resources>

    </Window.Resources>
    <StackPanel Orientation="Horizontal">
        <Button x:Name="btnOK" Margin="25" Height="200" Width="200" Content="OK" FontSize="20" Background="{DynamicResource myBrush}" Click="btnOK_Click"></Button>
        <Button x:Name="btnCancel" Margin="25" Height="200" Width="200" FontSize="20" Click="btnCancel_Click">
            <StackPanel>
                <Label HorizontalAlignment="Center" Content= "No Way!"/>
                <Ellipse Height="100" Width="100" Fill="{DynamicResource myBrush}"/>
            </StackPanel>
        </Button>
    </StackPanel> 
</Window>
