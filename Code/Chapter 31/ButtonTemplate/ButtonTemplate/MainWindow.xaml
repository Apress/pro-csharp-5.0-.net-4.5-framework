<Window x:Class="ButtonTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fun with Templates" Height="350" Width="525">
    <StackPanel>
        <Button x:Name="myButton" Background="Red" Content="Howdy!"
                Click="myButton_Click" Style="{StaticResource RoundButtonStyle}"></Button>
        <Button x:Name="myButton2" Background="LightGreen" Content="Cancel!"
                Style ="{StaticResource RoundButtonStyle}"></Button>
        
        <Button x:Name="myButton3" Background="Yellow"
                Style ="{StaticResource RoundButtonStyle}">
            <Button.Content>
                <ListBox Height="50" Width="75">
                    <ListBoxItem>Hello</ListBoxItem>
                    <ListBoxItem>Hello</ListBoxItem>
                    <ListBoxItem>Hello</ListBoxItem>
                </ListBox>
            </Button.Content>
        </Button>
    </StackPanel>
</Window>
